<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:enabled="false">

    <LinearLayout
        android:id="@+id/llTransparent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/yellowcoupon"/>

        <TextView
            android:id="@+id/tvCoupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_margin="50dp"
            app:layout_constraintEnd_toStartOf="@+id/tvLocation"
            app:layout_constraintStart_toStartOf="@+id/llTransparent"
            app:layout_constraintBottom_toTopOf="@id/tvDiscount"
            app:layout_constraintTop_toTopOf="@+id/llTransparent"
            tools:text="쿠폰명" />

        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="50dp"
            app:layout_constraintEnd_toEndOf="@+id/llTransparent"
            app:layout_constraintTop_toTopOf="@+id/llTransparent"
            app:layout_constraintStart_toStartOf="@+id/llTransparent"
            app:layout_constraintBottom_toBottomOf="@+id/llTransparent"
            tools:text="할인율" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_margin="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDiscount"
            app:layout_constraintBottom_toBottomOf="@+id/llTransparent"
            tools:text="내용" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_margin="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tvCoupon"
            app:layout_constraintEnd_toEndOf="@+id/llTransparent"
            app:layout_constraintTop_toTopOf="@+id/llTransparent"
            app:layout_constraintBottom_toTopOf="@id/tvDiscount"
            tools:text="장소" />

</androidx.constraintlayout.widget.ConstraintLayout>
